<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="clr-namespace:MarneTools.UI.Converters">

    <SolidColorBrush x:Key="Blue" Color="#409EFF" />
    <SolidColorBrush x:Key="Red" Color="#F56C6C" />
    <SolidColorBrush x:Key="Orange" Color="#E6A23C" />

    <cnv:IsNullOrWhiteSpaceConverter x:Key="IsNullOrWhiteSpaceConverter" />
    <cnv:IsNullOrWhiteSpace2Converter x:Key="IsNullOrWhiteSpace2Converter" />
    <cnv:StringToImageSourceConverter x:Key="StringToImageSourceConverter" />

    <!--  超链接全局样式  -->
    <Style TargetType="{x:Type Hyperlink}">
        <Setter Property="TextBlock.TextDecorations" Value="{x:Null}" />
        <Setter Property="Foreground" Value="#2196F3" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#E91E63" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  ToolTip背景色为白色  -->
    <Style TargetType="{x:Type ToolTip}">
        <Setter Property="Background" Value="White" />
    </Style>

</ResourceDictionary>