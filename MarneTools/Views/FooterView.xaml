<UserControl
    x:Class="MarneTools.Views.FooterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://wpf.microsoft.com/ui/2023/xaml"
    d:DesignHeight="25"
    d:DesignWidth="800"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">

    <DockPanel Margin="5,0,5,5" VerticalAlignment="Center">
        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
            <TextBlock Margin="0,0,7,0">
                <Hyperlink NavigateUri="https://marne.io" RequestNavigate="Hyperlink_RequestNavigate">Marne</Hyperlink>
            </TextBlock>
            <TextBlock Margin="0,0,7,0">
                <Hyperlink NavigateUri="https://github.com/CrazyZhang666/MarneTools" RequestNavigate="Hyperlink_RequestNavigate">GitHub</Hyperlink>
            </TextBlock>
            <TextBlock Margin="0,0,7,0">
                <Hyperlink NavigateUri="https://battlefield.vip/" RequestNavigate="Hyperlink_RequestNavigate">工具箱官网</Hyperlink>
            </TextBlock>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right">
            <TextBlock Margin="7,0,0,0" Text="{Binding FooterModel.Version, FallbackValue='v0.0.0.0'}" />
        </StackPanel>
    </DockPanel>

</UserControl>
